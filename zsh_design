POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(os_icon ssh root_indicator dir dir_writable vcs virtualenv newline vi_mode)
POWERLEVEL9K_RIGHT_PROMPT_ELEMENTS=()

